# Meter Band 0
#==============
## Meter Band Header
# Type (u16) = OFPMBT_DROP(1)
#<16>#
00 01

# Length (u16) = 16
00 10

# Rate for dropping packets (u32) = 4000 (kbps)
00 00 0f a0

# Size of bursts (u32) = 2048
00 00 08 00

## Meter Band Payload
# padding (u8 x 4)
00 00 00 00

#==============
# Meter Band 1
#==============
## Meter Band Header
# Type (u16) = OFPMBT_DSCP_REMARK(2)
#<32>#
00 02

# Length (u16) = 16
00 10

# Rate for remarking packets (u32) = 512 (kbps)
00 00 02 00

# Size of bursts (u32) = 2048
00 00 08 00

## Meter Band Payload
# precedence level (u8) = 1
01

# padding (u8 x 3)
00 00 00

#==============
# Meter Band 2
#==============
## Meter Band Header
# Type (u16) = OFPMBT_DSCP_REMARK(2)
#<48>#
00 02

# Length (u16) = 16
00 10

# Rate for remarking packets (u32) = 1024 (kbps)
00 00 04 00

# Size of bursts (u32) = 2048
00 00 08 00

## Meter Band Payload
# precedence level (u8) = 2
02

# padding (u8 x 3)
00 00 00

#==============
# Meter Band 3
#==============
## Meter Band Header
# Type (u16) = OFPMBT_DSCP_REMARK(2)
#<64>#
00 02

# Length (u16) = 16
00 10

# Rate for remarking packets (u32) = 2048 (kbps)
00 00 08 00

# Size of bursts (u32) = 2048
00 00 08 00

## Meter Band Payload
# precedence level (u8) = 3
03

# padding (u8 x 3)
00 00 00

