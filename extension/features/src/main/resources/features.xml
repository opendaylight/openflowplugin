        <configfile finalname="etc/opendaylight/karaf/44-cisco-extension.xml">mvn:org.opendaylight.openflowplugin/openflowplugin-extension-cisco/${project.version}/xml/config</configfile>
    </feature>
    <feature name='odl-openflowplugin-cisco-extension-li' description="OpenDaylight :: Openflow Plugin :: Li :: Cisco - extension" version='${project.version}'>
        <feature version="${project.version}">odl-openflowplugin-flow-services-rest-li</feature>
        <bundle>mvn:org.opendaylight.openflowplugin/openflowjava-extension-cisco-api/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.openflowplugin/openflowjava-extension-cisco-impl/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.openflowplugin/openflowplugin-extension-cisco/${project.version}</bundle>
