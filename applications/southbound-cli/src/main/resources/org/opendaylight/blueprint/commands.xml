<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="dataBrokerRef"
               interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="shellUtil/getalldpns">
            <action class="org.opendaylight.openflowplugin.applications.southboundcli.cli.GetAllDpnsCommandProvider">
                <property name="dataBroker" ref="dataBrokerRef" />
            </action>
        </command>
        <command name="shellUtil/showDpn">
            <action class="org.opendaylight.openflowplugin.applications.southboundcli.cli.ShowDpnCommandProvider">
                <property name="dataBroker" ref="dataBrokerRef" />
            </action>
        </command>
    </command-bundle>

</blueprint>