<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
    xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
    odl:use-default-for-reference-types="true">

    <reference id="dataBroker"
        interface="org.opendaylight.controller.md.sal.binding.api.DataBroker" />
    <reference id="rpcRegistry"
        interface="org.opendaylight.controller.sal.binding.api.RpcProviderRegistry" />
    <reference id="reconciliationManager"
        interface="org.opendaylight.openflowplugin.applications.reconciliation.ReconciliationManager" />


    <bean id="upgradeManager"
        class="org.opendaylight.openflowplugin.applications.frm.nodereconciliation.api.UpgradeManagerImpl"
        init-method="start" destroy-method="close">
        <argument ref="dataBroker" />
        <argument ref="rpcRegistry" />
        <argument ref="reconciliationManager" />
    </bean>

    <service ref="upgradeManager"
        interface="org.opendaylight.openflowplugin.applications.frm.nodereconciliation.api.UpgradeManager"
        odl:type="default" />

    <odl:rpc-service id="finishUpgradeService" interface="org.opendaylight.yang.gen.v1.urn.opendaylight.params.xml.ns.yang.openflow.upgrade.rev180328.OpenflowUpgradeService"/>

    <bean id="finishUpgradeReconciliationImpl" class="org.opendaylight.openflowplugin.applications.frm.nodereconciliation.impl">
        <argument ref="upgradeManager"/>
    </bean>

</blueprint>